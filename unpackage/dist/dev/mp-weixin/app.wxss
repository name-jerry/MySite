  /*每个页面公共css */

  /* ======================fontIcon============================= */
@font-face {
    font-family: "iconfont";
    src: url("//at.alicdn.com/t/c/font_3837728_b78bbxxxcuj.woff2?t=1674028714831") format("woff2"),
      url("//at.alicdn.com/t/c/font_3837728_b78bbxxxcuj.woff?t=1674028714831") format("woff"),
      url("//at.alicdn.com/t/c/font_3837728_b78bbxxxcuj.ttf?t=1674028714831") format("truetype");
}
[class*="icon"] {
    font-family: "iconfont" !important;
    display: flex;
    place-items: center;
    font-size: 1em;
    width: 1em;
    height: 1em;
    font-style: normal;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

  /* ============父组件============== */
#app {
    display: flex;
    min-height: 100vh;
    flex-direction: column;
    font-weight: normal;
}

  /* =======================格式化标签 ======================= */
img,
  a,
  span,
  button {
    display: inline-block;
    color: inherit;
    font: inherit;
}
button {
    /* 改变下指针的样式 改成手指*/
    cursor: pointer;
    background-color: transparent;
    border: none;
    padding: 0;
}
button:hover {
    outline: none;
}
a,
  label,
  input[type="radio"] {
    cursor: pointer;
    text-decoration: none;
    transition: 0.3s ease;
}

  /* ===========变化类=============== */
.logo:hover {
    filter: brightness(1.7);
}
.hover-color,
  .hover-bg-color,
  .hover-bg-move {
    transition: var(--transition-1);
    cursor: pointer;
}
.hover-bg-move {
    background-size: 200%;
    background-position: left;
}

  /* 字体变色 */
.hover-color:hover {
    color: var(--text-carolina-blue) !important;
}

  /* 背景变色 */
.hover-bg-color:hover {
    background: var(--gradient-1) !important;
}

  /* 背景移动 */
.hover-bg-move:hover {
    background-position: right;
}

  /* ===================常用的样式============================ */
  /* 选择所有class中含有btn字符串的元素 */
.btn-primary {
    padding: 8px 16px;
    border-radius: 6px;
}
.btn-secondary {
    padding: 18px 30px;
    border-radius: 11px;
}
.flex1 {
    flex: 1;
}
.card {
    background-color: var(--bg-oxford-blue);
    border: 1px solid var(--border-prussian-blue);
}
.lines {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: var(--lines);
    overflow: hidden;
}

  /* ====================响应式调整===================== */
  /* 每个块都设置container类为了在统一调整显示 */
.container {
    /* 设置100%未达到最大宽度时显示沾满 */
    max-width: 1140px;
    width: 100%;
    /* 设置块元素的左右居中 */
    margin: 0 auto;
    /* 设置当宽度压缩的时候保证内容和边界仍有空间 */
    padding-right: 16px;
    padding-left: 16px;
}
@media (max-width: 1200px) {
.container {
      max-width: 930px;
}
}

  /* header变化 */
@media (max-width: 992px) {
.container {
      max-width: 720px;
}
}
@media (max-width: 768px) {
:root {
      /* font size */
      --fontSize-1: 4.4rem;
}
.container {
      max-width: 540px;
}
}
@media (max-width: 575px) {
:root {
      --fontSize-1: 2.9rem;
      --fontSize-2: 2rem;
}
.container {
      padding-left: 10px;
      padding-right: 10px;
}
}
